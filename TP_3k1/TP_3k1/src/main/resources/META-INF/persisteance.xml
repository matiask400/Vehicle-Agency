<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
    <persistence-unit name="miUnidadPersistencia">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>ar.edu.utn.frc.backend.entities.Libro</class>
        <class>ar.edu.utn.frc.backend.entities.Autor</class>
        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:sqlite:libros.db"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.sqlite.JDBC"/>
            <!-- Usamos el dialecto de SQLite para Hibernate 6.x -->
            <property name="hibernate.dialect" value="org.hibernate.community.dialect.SQLiteDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>